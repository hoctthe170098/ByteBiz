@page
@model Web.Pages.Guests.HomeModel
@using BusinessObjects.Models
@using BusinessObjects.DTO
@{

}
<div class="container-fluid jb-wrapper">
    <div class="container">
        <div class="row">
            <!-- job board -->
            <div class="col-md-8 col-sm-12 col-12">
                <div class="job-board-wrap">
                    <h2 class="widget-title">
                        <span>Tuyển gấp</span>
                    </h2>
                    <div class="job-group">
                        @foreach (var project in Model.projectUrgenthiringDTOs)
                        {
                            <div class="job pagi">
                                <div class="job-content">
                                    <div class="job-logo">
                                        <a href="#">
                                            <img src="@Url.Content(project.avatarPoster)" class="job-logo-ima" alt="job-logo">
                                        </a>
                                    </div>

                                    <div class="job-desc">
                                        <div class="job-title" style="display: -webkit-box;-webkit-line-clamp:2;
-webkit-box-orient: vertical;overflow: hidden;text-overflow: ellipsis; width: 80%;">
                                            <a href="/Customs/ProjectDescription/@project.Id">@project.Title (@project.FormOfWork)</a>
                                        </div>
                                        <div class="job-company">
                                            <a href="#">@project.namePoster</a> | <a href="#" class="job-address">
                                                <i class="fa fa-map-marker" aria-hidden="true"></i>
                                                @project.Address
                                            </a>
                                        </div>

                                        <div class="job-inf">
                                            <div class="job-main-skill">
                                                <i class="fa fa-code" aria-hidden="true"></i>  @project.FieldName
                                            </div>
                                            <div class="job-salary">
                                                <i class="fa fa-money" aria-hidden="true"></i>
                                                <span class="salary-min">@project.BudgetFrom<em class="salary-unit">triệu</em></span>
                                                <span class="salary-max">@project.BudgetTo<em class="salary-unit">triệu</em></span>
                                            </div>
                                            <div class="job-deadline">
                                                <span><i class="fa fa-clock-o" aria-hidden="true"></i>  Hạn nộp: <strong>@project.EndDate.ToString("dd-MM-yyyy")</strong></span>
                                            </div>
                                        </div>
                                        <div class="job-inf">
                                            <div>
                                                Có @project.BiddingCount lượt báo giá
                                            </div>
                                        </div>
                                    </div>
                                    <div class="wrap-btn-appl">
                                        <a href="/Customs/ProjectDescription/@project.Id" class="btn btn-appl">Xem ngay</a>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="readmorestyle-wrap">
                            <a href="/Customs/SearchJob" class="readallstyle reads1">Xem tất cả</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- (end) job board -->
            <!-- sidebar -->
            <div class="col-md-4 col-sm-12 col-12 clear-left">
                <div class="job-sidebar">
                    <h2 class="widget-title">
                        <span>Ngành Nghề</span>
                    </h2>
                    <div class="catelog-list">
                        <ul>
                            @foreach(var field in Model.fields)
                            {
                                <li>
                                    <a href="/Customs/SearchJob/@field.Id">
                                        <span class="cate-img">
                                            <em>@field.Name</em>
                                        </span>
                                        <span class="cate-count">(@field.CountProject)</span>
                                    </a>
                                </li>
                            }
                            <li>
                                <a href="" class="readallstyle reads1">Xem tất cả</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="job-sidebar">
                    <div class="sb-banner">
                        <img src="~/img/qc2.jpg" class="advertisement">
                    </div>
                </div>
            </div>
            <!-- (end) sidebar -->
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="container-fluid">
    <div class="container job-best-salary">
        <div class="row">
            <div class="col-md-12 job-board2-wrap-header job-best-salary-header">
                <h3><i class="fa fa-briefcase pr-2"></i> Việc làm hấp dẫn</h3>
            </div>
        </div>
        <div class="row job-best-salary-inner">
            @foreach(var project in Model.projectNewHiringDTOs)
            {
                <div class="col-md-6 job-over-item">
                    <div class="job-inner-over-item">
                        <a href="/Customs/ProjectDescription/@project.Id">
                            <div class="thumbnail">
                                <img src="@Url.Content(project.avatarPoster)" alt="company logo image">
                            </div>
                            <div class="content">
                                <div class="job-name">
                                    @project.Title
                                </div>
                                <a href="#" class="company">
                                    @project.namePoster
                                </a>
                            </div>
                            <div class="extra-info">
                                <p class="salary mt-2"><i class="fa fa-money pr-2"></i>@project.BudgetFrom - @project.BudgetTo triệu</p>
                                <p class="place"><i class="fa fa-map-marker pr-2"></i>@project.Address</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
